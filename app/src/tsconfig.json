{
    "extends": "../../tsconfig_browser.jsonc",
    "include": ["**/*.ts", "**/*.vue"],
    "compilerOptions": {
        "strict": false,  // TODO rm when ready for serious typing!
        "exactOptionalPropertyTypes": false,  // TODO rm when ready for serious typing!
        "types": ["vuetify", "lodash", "offscreencanvas"],  // Needed for `new Vue({vuetify})`
        "paths": {
            "@/*": ["./*"],
        },
    },
    // Needed only for Vue 2 to help Volar VSCode extension
    "vueCompilerOptions": {
        "experimentalCompatMode": 2,
    },
}
